<p id="notice"><%= notice %></p>
<div class= "container-fluid text-center">
<h1>Boxes</h1>
</div>
<table class="table table-hover">
<table>
  <thead>
    <tr>
      <th scope="col">Descripcion</th>
      <th scope="col">Tamano</th>
      <th colspan="3"><center> Acciones Posible</center></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.descripcion %></td>
        <td><%= box.tamano %></td>
        <td><button type="button" class="btn btn-outline-primary"><%= link_to 'Mostrar', box %></td>
        <td><button type="button" class="btn btn-outline-success"><%= link_to 'Modificar', edit_box_path(box) %></td>
        <td><button type="button" class="btn btn-outline-danger"><%= link_to 'Eliminar', box, method: :delete, data: { confirm: 'DEsea Eliminar este Box?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</table>
<br>

<%= link_to 'Nuevo Box', new_box_path %>
